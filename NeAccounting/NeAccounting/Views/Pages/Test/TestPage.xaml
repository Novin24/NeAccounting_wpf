<Page x:Class="NeAccounting.Views.Pages.Test.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:NeAccounting.Views.Pages.Test"
      xmlns:nu="clr-namespace:NeAccounting.Controls"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DataContext="{d:DesignInstance local:TestPage,
                                     IsDesignTimeCreatable=False}"
      mc:Ignorable="d"
      Title="TestPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width=".7*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="1">
            <nu:PersianDatePicker DateChosen="PersianDatePicker_DateChosen" />
            <nu:MonthPicker
                x:Name="mnp"
                LabelName="تاریخ"
                SelectedMonth="{Binding ViewModel.Ts , Mode=TwoWay}"
                SelectedYear="{Binding ViewModel.Tse ,Mode=TwoWay}"/>
            
            <Button Content="ثبت "
                    Command="{Binding ViewModel.MyClickCommand}"/>
        </StackPanel>
    </Grid>
</Page>
