<Page x:Class="NeAccounting.Pages.CreateIntermediaryInvoicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:NeAccounting.Pages"
      xmlns:nu="clr-namespace:NeAccounting.Controls"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      d:Background="{DynamicResource ApplicationBackgroundBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="CreateIntermediaryInvoicePage">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="*" />
                <RowDefinition Height=".9*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="10*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width=".5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="1"
                    Grid.RowSpan="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Background="{StaticResource Rectangle Dark blue}"
                    CornerRadius="10"></Border>
            <Border Grid.Row="3"
                    Grid.RowSpan="3"
                    Grid.Column="2"
                    Grid.ColumnSpan="3"
                    Background="{StaticResource Rectangle Pale blue}"
                    CornerRadius="10"></Border>
            <Border Grid.Row="2"
                    Grid.RowSpan="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Background="{DynamicResource ApplicationBackgroundBrush}"
                    CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"></RowDefinition>
                        <RowDefinition Height="6*"></RowDefinition>

                    </Grid.RowDefinitions>
                    <ui:TextBlock Margin="55,0"
                                  Padding="0,20,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  FontFamily="the King &amp; Queen font"
                                  FontSize="30"
                                  Text="Novin" />
                    <Grid>
                        <TextBlock Margin="0 20 55 0"
                                   Height="40"
                                   HorizontalAlignment="Right"
                                   FontFamily="Calibri"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Text="فاکتور واسطه ای" />
                        <TextBlock Margin="60 20 0 0"
                                   Height="40"
                                   HorizontalAlignment="Center"
                                   FontFamily="Calibri"
                                   FontWeight="Bold"
                                   FontSize="18"><Run Text="1402/09/13 " /></TextBlock>

                    </Grid>

                    <Border Grid.Row="1"
                            Grid.ColumnSpan="2"
                            CornerRadius="9"
                            BorderBrush="#D6D5D5"
                            BorderThickness="0.4"
                            Margin="4">
                        <Border.Background>
                            <SolidColorBrush Color="White"
                                             Opacity="0.08" />

                        </Border.Background>

                        <Grid FlowDirection="RightToLeft"
                              Margin="50 15 50 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="4*"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>

                            </Grid.RowDefinitions>

                            <Grid Margin="0 ,5,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="0.3*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0"
                                            Margin="4 4 10 0 ">

                                    <TextBlock FontFamily="Calibri"
                                               FontSize="15"
                                               Text="فروشنده"
                                               Margin="2 0 0 0 " />
                                    <ui:TextBox TextAlignment="Center"
                                                FontFamily="Calibri"
                                                Margin="0 4 0 0" />
                                </StackPanel>
                                <StackPanel Grid.Column="1"
                                            Margin="10 4 10 0 ">

                                    <TextBlock FontFamily="Calibri"
                                               FontSize="15"
                                               Text="خریدار"
                                               Margin="2 0 0 0 " />
                                    <ui:NumberBox TextAlignment="Center"
                                                  FontFamily="Calibri"
                                                  Margin="0 4 0 0"
                                                  SpinButtonPlacementMode="Hidden" />
                                </StackPanel>
                                <StackPanel Grid.Column="2"
                                            Margin="10 4 10 0 ">

                                    <TextBlock FontFamily="Calibri"
                                               FontSize="15"
                                               Text="سود ما"
                                               Margin="2 0 0 0 " />
                                    <ui:NumberBox TextAlignment="Center"
                                                  FontFamily="Calibri"
                                                  Margin="0 4 0 0"
                                                  Padding="0 8 20 8  "
                                                  SpinButtonPlacementMode="Hidden" />
                                </StackPanel>
                                <nu:PersianDatePicker FlowDirection="LeftToRight"
                                                      Grid.Column="3"
                                                      LabelName="تاریخ" />

                            </Grid>
                            <StackPanel Grid.Row="1">
                                <Grid >

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width=".5*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Line Grid.ColumnSpan="6"
                                          X1="0"
                                          Y1="7"
                                          X2="700"
                                          Y2="7"
                                          StrokeThickness="8"
                                          VerticalAlignment="Top"
                                          HorizontalAlignment="Center"
                                          Fill="#FFB5ACAC"
                                          Stroke="#FFCCCCCC"
                                          Height="9" />
                                    <StackPanel Grid.Column="0"
                                                Margin="0 14 2 0 ">
                                        <TextBlock FontFamily="Calibri"
                                                   FontSize="15"
                                                   Text="ردیف"
                                                   HorizontalAlignment="Center" />
                                        <ui:TextBox TextAlignment="Center"
                                                    FontFamily="Calibri"
                                                    Margin="0 2 0 0" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1"
                                                Margin="2 14 2 0 ">
                                        <TextBlock FontFamily="Calibri"
                                                   FontSize="15"
                                                   Text="شرح کالا"
                                                   HorizontalAlignment="Center" />
                                        <ui:TextBox TextAlignment="Center"
                                                    FontFamily="Calibri"
                                                    Margin="0 2 0 0" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2"
                                                Margin="2 14 2 0 ">

                                        <TextBlock FontFamily="Calibri"
                                                   FontSize="15"
                                                   Text="مقدار"
                                                   HorizontalAlignment="Center" />
                                        <ui:TextBox TextAlignment="Center"
                                                    FontFamily="Calibri"
                                                    Margin="0 2 0 0" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="3"
                                                Margin="2 14 2 0 ">

                                        <TextBlock FontFamily="Calibri"
                                                   FontSize="15"
                                                   Text="واحد"
                                                   HorizontalAlignment="Center" />
                                        <ui:TextBox TextAlignment="Center"
                                                    FontFamily="Calibri"
                                                    Margin="0 2 0 0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="4"
                                                Margin="2 14 2 0 ">

                                        <TextBlock FontFamily="Calibri"
                                                   FontSize="15"
                                                   Text="قیمت کل"
                                                   HorizontalAlignment="Center" />
                                        <ui:TextBox TextAlignment="Center"
                                                    FontFamily="Calibri"
                                                    Margin="0 2 0 0" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="5"
                                                Margin="2 14 2 0 ">

                                        <TextBlock FontFamily="Calibri"
                                                   FontSize="15"
                                                   Text="توضیحات"
                                                   HorizontalAlignment="Center" />
                                        <ui:TextBox TextAlignment="Center"
                                                    FontFamily="Calibri"
                                                    Margin="0 2 0 0"/>
                                    </StackPanel>
                                </Grid>
                                <Button Content="اضافه کردن"
                                        Grid.Column="2"
                                        Padding="8 4 "
                                        Margin="0 5 0 5"
                                        Grid.ColumnSpan="2"
                                        IsDefault="True"
                                        FontSize="17"
                                        FontFamily="Calibri"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center" />
                            </StackPanel>
                            <DataGrid x:Name="Workersdata"
                                      BorderThickness="2"
                                      Grid.Row="2"
                                      CanUserResizeColumns="False"
                                      FontSize="15"
                                      CanUserResizeRows="False"
                                      FontFamily="Calibri"
                                      AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ردیف"
                                                        HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                        ElementStyle="{StaticResource CenterDtaGridCell}"
                                                        Width=".5*" />
                                    <DataGridTextColumn Header="شرح کالا"
                                                        ElementStyle="{StaticResource CenterDtaGridCell}"
                                                        HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                        Width="*" />
                                    <DataGridTextColumn Header="مقدار"
                                                        ElementStyle="{StaticResource CenterDtaGridCell}"
                                                        HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                        Width="*" />
                                    <DataGridTextColumn Header="واحد"
                                                        ElementStyle="{StaticResource CenterDtaGridCell}"
                                                        HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                        Width="*" />
                                    <DataGridTextColumn Header="قیمت کل"
                                                        ElementStyle="{StaticResource CenterDtaGridCell}"
                                                        HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                        Width="*" />

                                    <DataGridTextColumn Header="توضیحات"
                                                        ElementStyle="{StaticResource CenterDtaGridCell}"
                                                        HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                        Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>


                            <Button Content="ثبت"
                                    Grid.Row="3"
                                    Padding="30 4 "
                                    Margin="0 10"
                                    Grid.ColumnSpan="2"
                                    IsDefault="True"
                                    FontSize="17"
                                    FontFamily="Calibri"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Center" />
                        </Grid>


                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
